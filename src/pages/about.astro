---
import { getEntry } from "astro:content";
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const about = await getEntry("pages", "about");
const { Content } = await about.render();
---

<Layout title={about.data.title}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">{about.data.title}</Fragment>
      <Fragment slot="desc">{about.data.description}</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <img
        src={about.data.image.src}
        alt={about.data.image.alt}
        class="w-full rounded-md transition group-hover:-translate-y-1 group-hover:shadow-xl"
      />

      <div class="prose prose-lg mt-6">
        <Content />
      </div>
    </div>
  </Container>
</Layout>
