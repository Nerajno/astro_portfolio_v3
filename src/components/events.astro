---
// Import the Image component from Astro
import { Image } from 'astro:assets';

// Define the props passed to the component
const { id, title, description, image, date, location, links } = Astro.props;
---
<a href={`/events/${id}`} class="block">
<div class="card bg-white shadow-md rounded-lg overflow-hidden flex">
    <Image
        src={image}
        alt={title}
        width={192}
        height={192}
        class="h-48 w-48 object-cover"
    />
    <div class="p-4 flex-grow">
        <h3 class="text-xl font-bold">{title}</h3>
        <p class="text-gray-500">What was spoken about: {description}</p>
        <p class="text-gray-500">Date: {date}</p>
        <p class="text-gray-500">Location: {location}</p>
        <div class="flex gap-2 mt-2">
            {links.video && (
                <a href={links.video} target="_blank" class="bg-blue-500 text-white px-4 py-2 rounded-md">Video</a>
            )}
            {links.article && (
                <a href={links.article} target="_blank" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md">Article</a>
            )}
        </div>
    </div>
</div>
</a>
