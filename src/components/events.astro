---
// Ensure the correct import for the Image component
import { Image } from 'astro:assets';

// Define the props passed to the component
const {  title, description, image, date, location, link1, link2 } = Astro.props;
---

<div class="card bg-white shadow-md rounded-lg overflow-hidden">
    <Image src={image} alt="Image description" class="h-full w-48 object-cover" style={{ width: "192px", height: "auto" }} />
    <div class="p-4">
        <h3 class="text-xl font-bold">{title}</h3>
        <p class="text-gray-500">What was spoken about: {description}</p>
        <p class="text-gray-500">Date: {date}</p>
        <p class="text-gray-500">Location: {location}</p>
        <div class="flex gap-2">
            <a href={link1} target="_blank" class="bg-blue-500 text-white px-4 py-2 rounded-md">Link 1</a>
            <a href={link2} target="_blank" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md">Link 2</a>
        </div>
    </div>
</div>
